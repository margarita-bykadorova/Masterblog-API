{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:5002" }
  ],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts (optionally sorted)",
        "produces": [
          "application/json"
        ],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": ["title", "content"],
            "description": "Sort by title or content"
          },
          {
            "name": "direction",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": ["asc", "desc"],
            "description": "Sort direction (ascending or descending)"
          }
        ],
        "responses": {
          "200": { "description": "List of posts" },
          "400": { "description": "Invalid sorting parameters" }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Post created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/api/posts/{post_id}": {
      "put": {
        "summary": "Update a post",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Post updated" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Post deleted" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title and/or content",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Keyword to match in the title"
          },
          {
            "name": "content",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Keyword to match in the content"
          }
        ],
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    }
  }
}