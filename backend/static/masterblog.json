{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5002/api"
    }
  ],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts (optionally sorted)",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "title",
              "content",
              "author",
              "date"
            ],
            "description": "Field to sort by"
          },
          {
            "name": "direction",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "asc",
              "desc"
            ],
            "description": "Sort direction (ascending or descending)"
          }
        ],
        "responses": {
          "200": {
            "description": "List of posts"
          },
          "400": {
            "description": "Invalid sort or direction parameter"
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": [
          "Post"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                },
                "date": {
                  "type": "string",
                  "description": "Date in format YYYY-MM-DD"
                }
              },
              "required": [
                "title",
                "content",
                "author",
                "date"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created"
          },
          "400": {
            "description": "Validation error (missing or invalid fields)"
          },
          "500": {
            "description": "Failed to save data to JSON file"
          }
        }
      }
    },
    "/api/posts/{post_id}": {
      "put": {
        "summary": "Update an existing post",
        "tags": [
          "Post"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the post to update"
          },
          {
            "in": "body",
            "name": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                },
                "date": {
                  "type": "string",
                  "description": "Date in format YYYY-MM-DD"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post updated"
          },
          "400": {
            "description": "Invalid date format or request body"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Failed to save data to JSON file"
          }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "tags": [
          "Post"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the post to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Failed to save data to JSON file"
          }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title, content, author and/or date",
        "tags": [
          "Post"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Substring to search in the title"
          },
          {
            "name": "content",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Substring to search in the content"
          },
          {
            "name": "author",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Substring to search in the author"
          },
          {
            "name": "date",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Exact date to match (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": {
            "description": "Search results (may be empty)"
          }
        }
      }
    }
  }
}
